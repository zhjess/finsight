{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ES6",
      "skipLibCheck": true,
  
      /* Bundler mode */
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    }
  }